{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "@tsconfig/node24/tsconfig.json"
  ],
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "vite.config.*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite/client"
    ]
  }
}
